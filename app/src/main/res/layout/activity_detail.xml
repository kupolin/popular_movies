<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context="me.jonlin.android.popular_movies.DetailActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_iv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/movie_picture_content_description"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/favoritebt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/lightGrey"
                android:text="@string/favorite" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/release_date_label"
                    android:paddingStart="5dp"
                    android:paddingEnd = "5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/release_date_label"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/release_date"
                    android:paddingStart="5dp"
                    android:paddingEnd = "5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vote_average_label"
                    android:paddingStart="5dp"
                    android:paddingEnd = "5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vote_average_label"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/vote_average"
                    android:paddingStart="5dp"
                    android:paddingEnd = "5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sypnosis"
                    android:paddingStart="5dp"
                    android:paddingEnd = "5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sypnosis_label"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description_tv"
                    android:paddingStart="5dp"
                    android:paddingEnd = "5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
